.detail-container {
  padding-bottom: calc(108rpx + env(safe-area-inset-bottom));

  background: #f5f5f5;
}

.navigation-bar {
  display: flex;
  position: fixed;
  z-index: 10;
  top: 0;
  right: 0;
  align-items: center;
  justify-content: center;
  width: 100vw;

  border-bottom: 1rpx solid #f2f2f2;

  opacity: 0;
  background: #fff;

  color: #191919;
  font-size: 34rpx;
  font-weight: 500;
}

.content {
  width: 100%;
}

.product-content {
  margin-bottom: 16rpx;
  padding: 28rpx;

  background-color: #fff;
}

.product-price {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
}

.price-info {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
}

.invalid-price-info {
  display: flex;
  margin-top: 16rpx;

  color: #9e9e99;
  line-height: 28rpx;
}

.invalid-price-info .price {
  margin-top: 0;

  line-height: 28rpx;
}

.price-title {
  margin-right: 12rpx;

  color: #fa2c19;
  font-size: 24rpx;
  line-height: 28rpx;
}

.invalid-price-info .price-title {
  color: #9e9e9e;
  font-weight: 500;
}

.sall-info {
  color: #9e9e99;
  font-size: 24rpx;
  line-height: 28rpx;
}

.sell-number {
  padding: 0 16rpx;
}

.price-info .price {
  margin-top: 0;

  font-size: 40rpx;
  line-height: 56rpx;
}

.price-info .price-decimal {
  font-size: 28rpx;
  line-height: 34rpx;
}

.product-info {
  display: flex;
  margin-bottom: 28rpx;
}

.product-info .desc {
  margin-right: 38rpx;

  color: #212121;
  font-size: 32rpx;
  line-height: 38rpx;
}

.product-sub-info {
  margin-bottom: 28rpx;

  color: #9e9e9e;
  font-size: 26rpx;
  line-height: 30rpx;
}

.vip-card {
  border-radius: 12rpx;

  --cell-right-icon-color: #ffd19c;
  --cell-desc-text-color: #ffd19c;

  background: linear-gradient(135deg, #363644 0%, #5d5d6c 100%);
}

.vip-card .title {
  color: #ffd19c;
  font-size: 32rpx;
  line-height: 38rpx;
}

.select-content {
  margin-bottom: 16rpx;
}

.select-title {
  margin-right: 28rpx;

  color: #212121;
  font-size: 28rpx;
  line-height: 30rpx;
}

.select-value {
  color: rgba(33, 33, 33, 80%);
  font-size: 26rpx;
  line-height: 30rpx;

  --checkbox-label-padding-h: 4rpx;
}

.title-value {
  white-space: nowrap;
}

.item-value {
  color: #9e9e9e;
  font-size: 26rpx;
  line-height: 30rpx;
  white-space: nowrap;
}

.cuxiao {
  --cell-title-align-items: start;
}

.select-tag {
  margin-right: 10rpx;
}

.discount-package {
  margin-bottom: 16rpx;

  background-color: #fff;
}

.discount-content {
  padding: 28rpx;
}

.discount-item {
  display: inline-block;
  margin-right: 28rpx;
  padding: 16rpx;

  border-radius: 10rpx;

  background-color: #f3f3f3;
}

.discount-item:last-child {
  margin-right: 0;
}

.discount-item-img {
  width: 160rpx;
  height: 160rpx;
  margin-right: 16rpx;
}

.discount-item-img.last {
  margin-right: 0;
}

.package-price {
  display: flex;
  align-items: center;

  color: #9e9e9e;
  font-size: 24rpx;
  line-height: 28rpx;
}

.discount-item .package-price {
  margin-top: 20rpx;
}

.package-price .price {
  margin: 0;
  margin-right: 4rpx;
  margin-left: 8rpx;
}

.buyer-content {
  margin-bottom: 20rpx;
  padding: 16rpx 0;

  background-color: #fff;

  --cell-label-text-color: #fa2c19;
}

.buyer-section {
  margin-bottom: 16rpx;
}

.info-content {
  margin: 0 28rpx;
  padding-bottom: 28rpx;

  border-bottom: 1rpx solid #f2f2f2;
}

.evaluate-item {
  padding: 28rpx 0;
}

.user-name {
  color: rgba(33, 33, 33, 80%);
  font-size: 24rpx;
  line-height: 28rpx;
}

.show-time {
  color: #9e9e9e;
  font-size: 24rpx;
  line-height: 28rpx;
}

.show-text {
  color: rgba(33, 33, 33, 80%);
  font-size: 28rpx;
  line-height: 34rpx;
}

.show-item-img {
  height: 162rpx;
  overflow: hidden;

  border-radius: 8rpx;
}

.certification-content {
  --cell-title-text-color: #009b52;
  --cell-label-text-color: #757575;
}

.cert-item {
  background-image: linear-gradient(90deg, #fafffd 0%, #d3ffeb 100%);
}

.introduce-content {
  margin-bottom: 20rpx;
}

.introduce-title-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 108rpx;

  color: #9e9e9e;
  font-size: 28rpx;
  line-height: 34rpx;
}

.topic-content {
  margin-bottom: 20rpx;
}

.topic-title {
  color: #212121;
  font-size: 30rpx;
  font-weight: 500;
  line-height: 36rpx;
}

.topic-title-desc {
  font-size: 24rpx;
  line-height: 28rpx;

  --cell-desc-text-color: #a7a7a7;
}

.topic-item {
  padding: 0 28rpx;

  background-color: #fff;
}

.topic-item-content {
  display: flex;
  justify-content: space-between;
  padding: 28rpx 0;

  border-bottom: 1px solid #f5f5f5;
}

.topic-item:last-child .topic-item-content {
  border-bottom: none;
}

.topic-info {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.user-image {
  display: inline-flex;
  margin-right: 8rpx;

  border-radius: 50%;
}

.topic-item-title {
  color: rgba(33, 33, 33, 80%);
  font-size: 28rpx;
}

.topic-item-desc {
  display: flex;
  justify-content: space-between;
}

.topic-item-actions {
  display: flex;

  color: #9e9e9e;
  font-size: 24rpx;
}

.topic-action {
  margin-left: 28rpx;
}

.topic-action .action-number {
  margin-left: 4rpx;
}

.topic-item-user {
  display: flex;
  align-items: center;

  color: #9e9e9e;
  font-size: 24rpx;
}

.topic-item-img {
  margin-left: 28rpx;
}

.topic-img {
  border-radius: 8rpx;
}

.recommand-content {
  width: 100%;
}

.title-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;

  background-color: #fff;
}

.recommand-title {
  color: #212121;
  font-size: 30rpx;
  line-height: 36rpx;
}

.recommand-item {
  margin-bottom: 16rpx;
}

.recommand-item-content {
  padding: 20rpx;

  background-color: #fff;
}

.recommand-item-title {
  color: #212121;
  font-size: 26rpx;
}

.item-tags {
  display: flex;
}

.item-tag {
  margin: 0 8rpx;
}

.price-wrap {
  display: flex;
  align-items: baseline;
}

.price {
  margin-top: 30rpx;
  margin-right: 12rpx;

  color: #fa2c19;
  font-weight: bold;
}

.invalid-price {
  color: #9e9e9e;
  font-size: 26rpx;
  line-height: 30rpx;
  text-decoration: line-through;
}

.price-symbol {
  font-size: 24rpx;
  line-height: 26rpx;
}

.price-integer {
  font-size: 38rpx;
  line-height: 38px;
}

.price-decimal {
  font-size: 26rpx;
  line-height: 38rpx;
}

.no-more {
  margin: 40rpx 0;
}

.footer {
  position: fixed;
  bottom: 0;
  min-height: calc(108rpx + env(safe-area-inset-bottom));

  background-color: #fff;
}

.footer-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 8rpx;
}

.footer-actions {
  display: flex;
  align-items: center;
}

.footer .action-wrap {
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 96rpx;
  height: 108rpx;
}

.footer .action-text {
  color: #757575;
  font-size: 20rpx;
}

.footer-btns {
  display: flex;
}

.footer-btns .btn {
  margin: 10rpx;
}
