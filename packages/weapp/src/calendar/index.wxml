<wxs src="../common/utils/wxs/namespace.wxs" module="namespace" />
<wxs module="tools" src="./index.wxs" />
<template name="inner-calendar">
  <view class="{{ namespace.join('calendar') }} ext-class" style="{{ extStyle }}" catch:tap="noop" catch:click="noop">
    <view class="{{ namespace.handle('calendar', [ 'header' ]) }}">
      <view class="{{ namespace.handle('calendar', [ 'weekdays' ]) }}">
        <view class="{{ namespace.handle('calendar', [ 'weekday' ]) }}" wx:for="{{ week }}" wx:key="index">
          {{ item.text }}
        </view>
      </view>
      <view class="{{ namespace.handle('calendar', [ 'title' ]) }}">{{ monthTitle }}</view>
    </view>
    <scroll-view class="{{ namespace.handle('calendar', [ 'scroll' ]) }} ext-scroll-class" scroll-y scroll-into-view="{{ id }}">
      <view class="{{ namespace.join('calendar-month') }}" wx:for="{{ monthList }}" wx:for-item="month" wx:key="title" id="month{{ index }}" data-title="{{ month.title }}" data-id="month{{ index }}">
        <view class="{{ namespace.handle('calendar', [ 'title' ]) }}">{{ month.title }}</view>
        <view class="{{ namespace.handle('calendar', [ 'box' ,  month.isCover ? 'box-cover' + (round ? '-round' : '') : '']) }}">
          <block wx:for="{{ month.dateList }}" wx:for-index="dateIndex" wx:for-item="date" wx:key="dateIndex">
            <view class="{{ namespace.handle('calendar', [ 'date' ]) }} {{ namespace.handle('calendar', tools.getClass(date, round, month.curDate, month.isCompare)) }}" bind:tap="onSelect" data-date="{{ date.fullDateNum }}" data-month-index="{{ index }}" data-date-index="{{ dateIndex }}" data-status="{{ date.status }}" style="color:{{ color }};{{ tools.mergeStyle(dateIndex, month.offset) }}">
              <view wx:if="{{ date.topInfo }}" class="{{ namespace.handle('calendar', [ 'date-top-info' ]) }}">
                {{ date.topInfo }}
              </view>
              <view class="{{ namespace.handle('calendar', [ 'date-content' ]) }}" />
              <view class="{{ namespace.handle('calendar', [ 'date-text' ]) }}">
                {{ date.text }}
              </view>
              <view wx:if="{{ date.bottomInfo }}" class="{{ namespace.handle('calendar', [ 'date-bottom-info' ]) }}">
                {{ date.bottomInfo }}
              </view>
            </view>
          </block>
        </view>
      </view>
    </scroll-view>
    <ti-button size="large" color="{{ color }}" wx:if="{{ confirmText }}" ext-class="{{ namespace.handle('calendar', [ 'submit' ]) }}" bind:tap="onConfirm">
      {{ confirmText }}
    </ti-button>
  </view>
</template>
<block wx:if="{{usePopup}}">
  <ti-popup visible="{{ visible }}" position="{{ position }}" close-on-mask="{{ closeOnMask }}" destroy-on-close="{{ destroyOnClose }}" class="{{ namespace.handle('calendar', [ 'popup' ]) }}" ext-class="{{ namespace.handle('calendar', [ 'popup-box' ]) }} ext-popup-class" ext-content-class="{{ namespace.handle('calendar', [ 'popup-content' ]) }} ext-popup-content-class" ext-mask-class="ext-popup-mask-class" bind:close="onClose">
    <ti-popup-titlebar wx:if="{{ title }}" title="{{ title }}" variant="cancel-only" bind:close="onClose" bind:cancel="onClose" bind:confirm="onClose" />
    <template is="inner-calendar" data="{{ extStyle,week,monthTitle,id,index,monthList,color,confirmText }}" />
  </ti-popup>
</block>
<block wx:else>
  <template is="inner-calendar" data="{{ extStyle,week,monthTitle,id,index,monthList,color,confirmText }}" />
</block>